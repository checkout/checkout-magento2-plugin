<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="cko-cdn" type="host">*.checkout.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="cko-all" type="host">*.checkout.com</value>
                <value id="apple-cdn" type="host">*.cdn-apple.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="cko-all" type="host">*.checkout.com</value>
                <value id="klarna-cdn" type="host">*.klarnacdn.net</value>
                <value id="apple-cdn" type="host">*.cdn-apple.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="cko-all" type="host">*.checkout.com</value>
                <value id="klarna-cdn" type="host">*.klarnaevt.com</value>
                <value id="klarnacdn" type="host">*.klarnacdn.net</value>
                <value id="klarna" type="host">*.klarna.com</value>
                <value id="datadoghq" type="host">*.browser-intake-datadoghq.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="cko-all" type="host">*.checkout.com</value>
                <value id="klarna" type="host">*.klarna.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="data" type="host">data:</value>
                <value id="cko-all" type="host">*.checkout.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
