<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="webhooks_clean">
        <job name="webhooks_clean" instance="CheckoutCom\Magento2\Cron\Webhooks" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
    <group id="cko_order_clean">
        <job name="cko_paybylink_pending_order_cancel" instance="CheckoutCom\Magento2\Cron\AutoCancelPendingPayByLinkOrders" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
</config>
