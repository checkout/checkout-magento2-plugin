        <method name="checkoutcom_card_payment">
            <allow_multiple_address>0</allow_multiple_address>
        </method>
        <method name="checkoutcom_apm">
            <allow_multiple_address>0</allow_multiple_address>
        </method>
        <method name="checkoutcom_apple_pay">
            <allow_multiple_address>0</allow_multiple_address>
        </method>
        <method name="checkoutcom_google_pay">
            <allow_multiple_address>0</allow_multiple_address>
        </method>
        <method name="checkoutcom_vault">
            <allow_multiple_address>0</allow_multiple_address>
        </method>
    </methods>
