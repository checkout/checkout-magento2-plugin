<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="CheckoutCom_Magento2::css/frames/apple-pay/apple-pay.css"/>
    </head>
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Magento\Framework\View\Element\Template" template="CheckoutCom_Magento2::frames/cart/applepay.phtml" name="apple.pay.button" after="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">CheckoutCom\Magento2\ViewModel\Cart\ApplePayButton</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" template="CheckoutCom_Magento2::frames/cart/paypal.phtml" name="paypal.button" after="apple.pay.button">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="paypal_express_button" xsi:type="array">
                                <item name="component" xsi:type="string">CheckoutCom_Magento2/js/frames/view/payment/method-renderer/checkoutcom_paypal_express</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">CheckoutCom_Magento2/frames/payment/checkoutcom_paypal_express</item>
                                    <item name="context" xsi:type="string">express_cart</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="promotion" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="paypal" xsi:type="array">
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="checkout.paypal.express.script">
            <arguments>
                <argument name="script_type" xsi:type="string">cart</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="minicart.checkout.config" remove="true"/>
    </body>
</page>
